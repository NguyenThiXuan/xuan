<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/angela" />

        <TextView
            android:id="@+id/txtname"
            android:layout_toRightOf="@id/img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="BÙI NGỌC HÀ"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_age"
            android:layout_toRightOf="@+id/img_avatar"
            android:layout_below="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:    23"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_toRightOf="@+id/img_avatar"
            android:id="@+id/txt_phone"
            android:layout_below="@+id/txt_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile: 01234567890"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_toRightOf="@+id/img_avatar"
            android:layout_below="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hocvienimic@gmail.com"
            android:padding="10dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_edu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDUCATION"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txt_contentedu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_edu"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:text="Graduated Ha Noi university of Mining and Geology"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contentedu"
            android:layout_toRightOf="@id/txt_edu"
            android:paddingLeft="5dp"
            android:text="TOEIC 700 and IELTS 5.0"
            android:paddingTop="3dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKILLS"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txt_contentskills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_skills"
            android:paddingTop="1dp"
            android:paddingLeft="50dp"
            android:text="Good teamwork skill and ability to work under preasure"/>
        <TextView
            android:id="@+id/txt_contentskills2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contentskills"
            android:layout_toRightOf="@id/txt_skills"
            android:text="Ability to adapt with new work environment and work flow"
            android:paddingTop="5dp"
            android:paddingLeft="50dp"/>
        <TextView
            android:id="@+id/txt_contentskills3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contentskills2"
            android:layout_toRightOf="@id/txt_skills"
            android:text="Responsible, careful, active and creative in work"
            android:paddingTop="5dp"
            android:paddingLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contentskills3"
            android:layout_toRightOf="@id/txt_skills"
            android:text="Honest, friendly and ready to learn new things"
            android:paddingTop="5dp"
            android:paddingLeft="50dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPERIENCE"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txtc_contexp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_exp"
            android:layout_marginTop="8dp"
            android:text="Honest, friendly and ready to learn new things"
            android:paddingTop="3dp"/>
        <TextView
            android:id="@+id/txtc_contexp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_exp"
            android:layout_below="@id/txtc_contexp"
            android:text="Having experience for supporting  and managing in some aeriagames project and coursera's education project   "
            android:paddingTop="5dp"/>

    </RelativeLayout>

</LinearLayout>

