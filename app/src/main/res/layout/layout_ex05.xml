<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn loại tin rao"
        android:padding="15dp"
        android:textColor="@android:color/black"/>
    <RadioButton
        android:id="@+id/rdo01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin thường"
        android:layout_marginLeft="15dp"/>
    <RadioButton
        android:id="@+id/rdo02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin Vip 2"
        android:layout_marginLeft="15dp"/>
    <RadioButton
        android:id="@+id/rdo03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin Vip 1"
        android:layout_marginLeft="15dp"/>
    <RadioButton
        android:id="@+id/rdo04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin Vip Pro"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/tvTimeDang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian đăng"
        android:textColor="@android:color/black"
        android:layout_margin="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sprborder"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up tin tự động"
            android:paddingLeft="15dp"
            android:textColor="@android:color/black"/>
        <Switch
            android:id="@+id/SwtUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:paddingLeft="230dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền: "
            android:padding="15dp"/>
        <EditText
            android:id="@+id/editTien"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" VNĐ "
            android:padding="15dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu và Tiếp tục"
        android:background="@drawable/sprbutton"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>